{
  "name": "npm-static-page",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:sass": "node-sass --include-path scss src/css/style.scss dist/css/style.css",
    "build:ejs": "ejs-cli --base-dir src/ejs '*.ejs' --out dist/",
    "watch:sass": "node-sass --watch --include-path scss src/css/style.scss dist/css/style.css",
    "watch:ejs": "nodemon --ext ejs --watch src --exec 'npm run build:ejs'",
    "watch:js": "watchify --entry src/js/app.js --outfile dist/js/bundle.js --verbose",
    "start": "concurrently \"npm:watch:ejs\" \"npm:watch:sass\" \"npm:watch:js\"",
    "build": "",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "babel-cli": "^6.26.0",
    "concurrently": "^3.6.0",
    "ejs-cli": "^2.0.1",
    "http-server": "^0.11.1",
    "node-sass": "^4.9.2",
    "nodemon": "^1.18.3",
    "postcss-cli": "^6.0.0",
    "watchify": "^3.11.0"
  },
  "dependencies": {}
}
